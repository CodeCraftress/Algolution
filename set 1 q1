#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> arr = {-1, 2, -3, 4, -5, 6, -7};
    int count = 0;

    for (int num : arr) {
        if (num < 0) {
            count++;
        }
    }

    cout << "Total negative numbers: " << count << endl;  // Output: 4
    return 0;
}
